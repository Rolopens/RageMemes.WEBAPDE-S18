    <body>
        <!--navbar-->
        <nav class="fixed-top navbar navbar-expand-lg home-navbar reverse-order">
            {{#if user}}
            <a class="navbar-brand whitewash-text" href="user-home">
                <img src="res/homeIcon.png" width="30" height="30" class="d-inline-block align-top" alt="">
                RageMemes
            </a>
            {{else}}
            <!--RageMemes text-->
            <a class="navbar-brand whitewash-text" href="home">
                <img src="/res/homeIcon.png" width="30" height="30" class="d-inline-block align-top" alt="">
                RageMemes
            </a>
            {{/if}}
            <input class="searchbar" type="search" placeholder="Search">
            <button class="btn btn-primary" type="submit"><img src="/res/search.png" width="20" height="20s  "></button>
            
            {{#if user}}
            <a class="nav-link whitewash-text right-floater" href="home">Logout<span class="sr-only">(current)</span></a>
            {{else}}
            <!--login-->
            <a class="nav-link whitewash-text right-floater" href="login">Login<span class="sr-only">(current)</span></a>
            <!--signup-->
            <a class="nav-link whitewash-text right-floater" href="signup">Sign up<span class="sr-only">(current)</span></a>
            {{/if}}
            
            <!--tags-->
            <div class="collapse navbar-collapse right-floater" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle whitewash-text" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Search by Tags
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <!--anime-tag-->
                            <a class="dropdown-item" href="anime-tag">#Anime</a>
                            <!--classic-tag-->
                            <a class="dropdown-item" href="classic-tag">#Classic</a>
                            <!--dank-tag-->
                            <a class="dropdown-item" href="dank-tag">#Dank</a>
                            <!--pinoy-tag-->
                            <a class="dropdown-item" href="pinoy-tag">#Pinoy</a>
                            <!--wholesome-tag-->
                            <a class="dropdown-item" href="wholesome-tag">#Wholesome</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
         <!--Main content-->
        {{#if user}}
        <div id="main-content1">
            <div class="meme-container">
                <img src="res/TwiceMina.jpg" class="avatar">
                <!--Mina Myoui-->
                <a href="user-upload" style="text-align: center; color:#3E3E3B;" class="lead">Upload form</a>
                <a href="user-profile" style="text-align: center; color:#3E3E3B;" class="lead">My memes</a>
            </div>
        </div>
        {{/if}}
        <div id="main-content">
            <div class="container meme-container">
                <div class="meme-post">
                    <img src="../res/meme1.jpg" class="image">
                    <h1 class="display-4" style="text-align: center; color:#3E3E3B;">{{post.title}}</h1>
                    <div class="details">
                        <h2 class="description">{{post.description}}</h2>
                        <!--posted by user-->
                        <h3 class="author">
                            Posted by 
                            <a href="tzuyu-profile">{{post.user}}</a> 
                            on {{post.date}}
                        </h3>
                        <!--tag-->
                        <h3 class="tags">
                            {{#each post.tags}} 
                                {{this}},
                            {{/each}}
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        
    </body>
